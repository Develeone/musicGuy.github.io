@import 'nib'
@import 'rupture'

.why>h3
  font-size 48px
  font-family Myriad Pro
  text-align center
li
  display: flex
  flex-direction column
  flex-shrink:0
  flex-grow 0
  margin 0 10px
ul
  display: flex
  justify-content center
  flex-direction: row
  +below(330px)
    flex-direction: column
  flex-wrap wrap
  img
    margin: auto
  p
    text-align center

.items
  img
    width: 100%
  >div
    display: flex
    justify-content: center
    align-content flex-end
    +below(930px)
      flex-direction: column
    .icon
      +below(930px)
        margin: auto
      max-width: 400px
      max-height: 240px
    .content
      display: flex
      flex-direction column
      max-width 500px
      +above(931px)
        margin-left 15px
      +below(930px)
        margin auto
  h3
    margin-bottom 0
    color #363636
    font-family Myriad Pro
    font-size 24px
    font-weight 700
    +below(930px)
      text-align center
  p
    +below(930px)
      text-align justify
    color #363636
    font-family Myriad Pro
    font-size 18px
    font-weight 400
  button
    margin-top auto
    width: 100%
    max-width: 495px
    min-height: 41px
    background-color #ff9600
    background-image linear-gradient(to top, rgba(0, 0, 0, 0.18) 0%, rgba(213, 105, 0, 0.18) 100%)
    border-radius 3px
    box-shadow inset 0 -1px 1px rgba(213, 105, 0, 0.96)
    color white
    text-shadow 0 1px 1px rgba(190, 122, 2, 0.84)
    font-family "Myriad Pro"
    font-size 20px
    font-weight 700
